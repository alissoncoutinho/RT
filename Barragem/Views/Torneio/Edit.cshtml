@model Barragem.Models.Torneio

<div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">Torneio</h3>
    </div>


    @using (Html.BeginForm("Edit", "Torneio", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="box-body">
            <div class="form-group">
                @Html.LabelFor(model => model.nome, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-8 input-group">
                    @Html.TextBoxFor(model => model.nome, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(model => model.nome)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.dataInicio, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4 input-group date" id="dataInicio" data-date-format="dd/mm/yyyy">
                    @Html.TextBoxFor(model => model.dataInicio, new { @class = "form-control", @readonly = "readonly" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar">
                        </span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.dataInicio)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.dataFim, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4 input-group date" id="dataFim" data-date-format="dd/mm/yyyy">
                    @Html.TextBoxFor(model => model.dataFim, new { @class = "form-control", @readonly = "readonly" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar">
                        </span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.dataFim)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.dataFimInscricoes, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4 input-group date" id="dataFimInscricoes" data-date-format="dd/mm/yyyy">
                    @Html.TextBoxFor(model => model.dataFimInscricoes, new { @class = "form-control", @readonly = "readonly" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar">
                        </span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.dataFimInscricoes)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.qtddClasses, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4 input-group">
                    <select id="qtddClasses" name="qtddClasses" class="form-control">
                        <option value="1" @if (Model.qtddClasses==1) { @Html.Raw("selected")}>1</option>
                        <option value="2" @if (Model.qtddClasses == 2) { @Html.Raw("selected") }>2</option>
                        <option value="3" @if (Model.qtddClasses == 3) { @Html.Raw("selected") }>3</option>
                        <option value="4" @if (Model.qtddClasses == 4) { @Html.Raw("selected") }>4</option>
                        <option value="5" @if (Model.qtddClasses == 5) { @Html.Raw("selected") }>5</option>
                    </select>
                </div>
                @Html.ValidationMessageFor(model => model.qtddClasses)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.valor, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4 input-group">
                    @Html.TextBoxFor(model => model.valor, new { @class = "form-control", @placeholder = "" })
                </div>
                @Html.ValidationMessageFor(model => model.valor)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.periodicidadeJogos, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4 input-group">
                    <select id="periodicidadeJogos" name="periodicidadeJogos" class="form-control">
                        <option value="1" @if (Model.periodicidadeJogos == 1){ @Html.Raw("selected") }>1 em 1 dia</option>
                        <option value="2" @if (Model.periodicidadeJogos == 2) { @Html.Raw("selected")  }>2 em 2 dias</option>
                        <option value="3" @if (Model.periodicidadeJogos == 3) { @Html.Raw("selected")  }>3 em 3 dias</option>
                        <option value="4" @if (Model.periodicidadeJogos == 4) { @Html.Raw("selected")  }>4 em 4 dias</option>
                        <option value="5" @if (Model.periodicidadeJogos == 5) { @Html.Raw("selected")  }>5 em 5 dias</option>
                        <option value="6" @if (Model.periodicidadeJogos == 6) { @Html.Raw("selected")  }>6 em 6 dias</option>
                        <option value="7" @if (Model.periodicidadeJogos == 7) { @Html.Raw("selected")  }>7 em 7 dias</option>
                        <option value="10" @if (Model.periodicidadeJogos == 10) { @Html.Raw("selected")  }>10 em 10 dias</option>
                        <option value="15" @if (Model.periodicidadeJogos == 15) { @Html.Raw("selected")  }>15 em 15 dias</option>
                        <option value="20" @if (Model.periodicidadeJogos == 20) { @Html.Raw("selected")  }>20 em 20 dias</option>
                        <option value="30" @if (Model.periodicidadeJogos == 30) { @Html.Raw("selected")  }>30 em 30 dias</option>
                    </select>
                </div>
                @Html.ValidationMessageFor(model => model.periodicidadeJogos)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.premiacao, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-8 input-group">
                    @Html.TextBoxFor(model => model.premiacao, new { @class = "form-control", @placeholder = "" })
                </div>
                @Html.ValidationMessageFor(model => model.premiacao)
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-6">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.isOpen, new { @checked = "checked" }) Torneio Aberto
                        </label>
                    </div>
                </div>
                <div class="col-sm-offset-2 col-sm-6">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.temRepescagem, new { @checked = "checked" }) Tem Repescagem
                        </label>
                    </div>
                </div>
                <div class="col-sm-offset-2 col-sm-6">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.isAtivo, new { @checked = "checked" }) Ativo
                        </label>
                    </div>
                </div>
            </div>

            @if (Roles.IsUserInRole("admin"))
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.barragem, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-6 input-group">
                        @Html.DropDownList("barragemId", null, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.barragemId)
                </div>
            }
            else
            {
                <input type="hidden" name="barragemId" value="@ViewBag.barraId" />
            }
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="@Url.Action("Index")" title="Voltar" class="btn btn-default">Voltar</a>
            <button type="submit" class="btn btn-info pull-right">Gravar</button>
        </div>

    }

</div>

@section Scripts {

    <script type="text/javascript">
        $(function () {
            $("#dataInicio").datepicker({
                language: 'pt-BR',
                pickTime: false
            });
            $("#dataFim").datepicker({
                language: 'pt-BR',
                pickTime: false
            });
            $("#dataFimInscricoes").datepicker({
                language: 'pt-BR',
                pickTime: false
            });
        });
    </script>
}

@model Barragem.Models.Torneio
<section class="content-header">
    <h1>Torneio</h1>
</section>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Detalhes</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        @Html.LabelFor(m => m.nome, new { @class = "col-sm-3" })
                        <div class="col-sm-8 info-box-text">
                            @Html.Raw(Model.nome)
                        </div>
                    </div>
                    <div class="row">
                        @Html.Label("Patrocinador", new { @class = "col-sm-3" })
                        <div class="col-sm-8 info-box-text">
                            @Html.Raw(Model.barragem.nome)
                        </div>
                    </div>
                    <div class="row">
                        @Html.Label("Período", new { @class = "col-sm-3" })
                        <div class="col-sm-8 info-box-text">
                            @Html.Raw(Model.dataInicio.ToShortDateString()) a @Html.Raw(Model.dataFim.ToShortDateString())
                        </div>
                    </div>
                    <div class="row">
                        @Html.Label("Jogos", new { @class = "col-sm-3" })
                        <div class="col-sm-8 info-box-text">
                            De @Html.Raw(Model.periodicidadeJogos) em @Html.Raw(Model.periodicidadeJogos) dias
                        </div>
                    </div>
                    <div class="row">
                        @Html.Label("Classes", new { @class = "col-sm-3" })
                        <div class="col-sm-8 info-box-text">
                            @Html.Raw(Model.qtddClasses)
                        </div>
                    </div>
                    <div class="row">
                        @Html.Label("Repescagem", new { @class = "col-sm-3" })
                        <div class="col-sm-8 info-box-text">
                            @if (Model.temRepescagem)
                            { @Html.Raw("Sim") }
                            else
                            { @Html.Raw("Não")}
                        </div>
                    </div>
                    <div class="row">
                        @Html.Label("Premiação", new { @class = "col-sm-3" })
                        <div class="col-sm-8 info-box-text">
                            @Html.Raw(Model.premiacao)
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-6">
            <!-- Horizontal Form -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Inscrição</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Inscricao", "Torneio", FormMethod.Post, new { @class = "form-horizontal", @name = "formInscricao" }))
                {
                    <div class="box-body">
                        <div class="row">
                            @Html.Label("Valor", new { @class = "col-sm-4" })
                            <div class="col-sm-8 info-box-text">
                                @Html.Hidden("operacao", "inscricao")
                                @Html.Hidden("torneioId", Model.Id)
                                @if (ViewBag.valor == "gratuito")
                                {
                                    @Html.Raw(ViewBag.valor)
                                    @Html.Hidden("vrInscricao", "0");
                                }
                                else
                                {
                                    @Html.Raw("R$ " + Model.valor + ",00")
                                    @Html.Hidden("vrInscricao", Model.valor);
                                }
                            </div>
                        </div>
                        @if ((Model.isMaisUmaClasse != null) || (!(bool)Model.isMaisUmaClasse))
                        {
                            <div class="row">
                                @Html.Label("Valor +1 classe", new { @class = "col-sm-4" })
                                <div class="col-sm-8 info-box-text">
                                    @Html.Raw("R$ " + Model.valorMaisClasses + ",00")
                                </div>
                            </div>
                        }
                        <div class="row">
                            @Html.Label("Inscrições até", new { @class = "col-sm-4" })
                            <div class="col-sm-8 info-box-text">
                                @Html.Raw(Model.dataFimInscricoes.ToShortDateString())
                            </div>
                        </div>
                        <div class="row">
                            @Html.Label("Categoria", new { @class = "col-sm-4" })
                            <div class="col-sm-8 info-box-text">
                                <select name="classeInscricao" class="form-control">
                                    @foreach (var item in ViewBag.Classes)
                                    {
                                        <option value="@item.Id" @if (ViewBag.ClasseInscricao == item.Id) { @Html.Raw("selected")    }>@item.nome</option>
                                    }
                                </select>
                            </div>
                        </div>
                        @if ((Model.isMaisUmaClasse != null) || (!(bool)Model.isMaisUmaClasse))
                        {
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" value="true" name="isMaisDeUmaClasse" id="isMaisDeUmaClasse" onclick="segundaOpcaoDeClasse()" /> @Html.Raw("Jogar em +1 Categoria")
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div id="segundaOpcaoClasse" class="row">
                                @Html.Label("2ª Categoria", new { @class = "col-sm-4" })
                                <div class="col-sm-8 info-box-text">
                                    <select name="classeInscricao2" class="form-control">
                                        @foreach (var item in ViewBag.Classes)
                                        {
                                            <option value="@item.Id" @if (ViewBag.ClasseInscricao2 == item.Id) { @Html.Raw("selected")     }>@item.nome</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        }
                        @if (!String.IsNullOrEmpty(Model.observacao))
                        {
                            <br>
                            <div class="boxPadrao">
                                <div class="row">
                                    <div class="col-sm-12">@Html.Raw(Model.observacao)</div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-sm-12"><input type="text" placeholder="Responda aqui..." name="observacao" class="form-control"></div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        @if (Model.dataFimInscricoes.AddDays(1) >= DateTime.Now)
                        {
                            if (ViewBag.isInscrito)
                            {
                                <button type="button" class="btn btn-danger pull-right confirmCancel">Cancelar</button>
                                <button type="button" class="btn btn-info pull-right alterarClasse">Alterar Classe</button>
                                if (String.IsNullOrEmpty(ViewBag.statusPagamento))
                                {
                                    <a href="@Url.Action("EfetuarPagamento", new { inscricaoId = ViewBag.InscricaoId })" class="btn btn-default" data-id="@ViewBag.InscricaoId" title="Efetuar Pagamento">Efetuar Pagamento</a>
                                }
                            }
                            else
                            {
                                <button type="button" class="btn btn-info pull-right confirmInscricao">Inscrever-me</button>
                            }
                        }
                        else
                        {
                            @Html.Raw("Inscrições Encerradas.")
                        }
                        <a href="@Url.Action("InscricoesTorneio2", new { torneioId = @Model.Id })" class="btn btn-default" data-id="@Model.Id" title="Inscritos">Inscritos</a>
                    </div>
                    <!-- /.box-footer -->
                }
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {

            $(".confirmInscricao").confirm({
                title: "Confirmação",
                text: "Aperte SIM para confirmar sua inscrição!",
                confirm: function (button) {
                    //window.location.href = button.data("link");
                    document.formInscricao.operacao.value = "inscricao";
                    document.formInscricao.submit();
                },
                cancel: function (button) {

                },
                confirmButton: "Sim",
                cancelButton: "Não"
            });

            $(".alterarClasse").confirm({
                title: "Confirmação",
                text: "Aperte SIM para confirmar a alteração da sua classe!",
                confirm: function (button) {
                    //window.location.href = button.data("link");
                    document.formInscricao.operacao.value = "alterar";
                    document.formInscricao.submit();
                },
                cancel: function (button) {

                },
                confirmButton: "Sim",
                cancelButton: "Não"
            });

            $(".confirmCancel").confirm({
                title: "Confirmação",
                text: "Aperte SIM para confirmar o cancelamento da inscrição!",
                confirm: function (button) {
                    //window.location.href = button.data("link");
                    document.formInscricao.operacao.value = "cancelar";
                    document.formInscricao.submit();
                },
                cancel: function (button) {

                },
                confirmButton: "Sim",
                cancelButton: "Não"
            });

        });

        function segundaOpcaoDeClasse() {
            if (document.getElementById('isMaisDeUmaClasse').checked) {
                document.getElementById('segundaOpcaoClasse').style.opacity = "1";
                document.getElementById('segundaOpcaoClasse').style.display = "block";
            } else {
                document.getElementById('segundaOpcaoClasse').style.opacity = "0 !important";
                document.getElementById('segundaOpcaoClasse').style.display = "none";
            }
        }
        document.getElementById('segundaOpcaoClasse').style.opacity = "0";
        document.getElementById('segundaOpcaoClasse').style.display = "none";
        
    </script>
}
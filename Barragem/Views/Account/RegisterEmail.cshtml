@model Barragem.Models.VerificacaoCadastro
@{
    ViewBag.Title = "Register";

}
@using (Html.BeginForm("RegisterEmail", "Account", FormMethod.Post))
{
    <div class="form-horizontal">
        <legend>Informe seu email para verificação de cadastro</legend>

        <div class="form-group">
            @Html.Label("Email", new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <input type="text" name="email" class="form-control" placeholder="email para verificação de cadastro" />
                @Html.ValidationMessageFor(m => m.email, "", new { @class = "alert-danger" })
            </div>
            <div class="form-group col-md-2">
                <button class="btn btn-small btn-success" type="submit">Verificar</button>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/load-image")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
                                                
        })
    </script>
}

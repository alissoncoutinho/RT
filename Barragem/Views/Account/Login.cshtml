@{
    ViewBag.Title = "Funcionalidades";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

@model Barragem.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div class="headline-bg">
</div>
<section class="features-video section section-on-bg">
    <div class="container text-center">
    </div>
</section>

<section class="signup-section access-section section">
    <div class="container">
        <div class="row">
            <div class="form-box col-md-12 col-sm-12 col-xs-12">
                <div class="form-box-inner">
                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="form">
                            <h2 class="title">Login</h2>
                            <div class="form-group">
                                <div class="input-group col-md-3">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                    <input type="text" class="form-control" value="@ViewBag.userName" placeholder="Usuário" id="UserName" name="UserName" required autofocus>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group col-md-3">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                    <input type="password" class="form-control" placeholder="Senha" id="Password" name="Password" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox-inline  col-md-3">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-small btn-success" type="submit">Entrar</button>
                                <a href="/Account/ResetarSenha" class="btn btn-small btn-info" role="button">Esqueci a senha</a>
                            </div>
                        </div>
                        <br><br><br><br>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
